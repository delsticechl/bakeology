<div class="admin-container">
  <div class="manage-header">
    <h1 class="fw-bold mb-4">Manage Cakes</h1>
    <a href="/admin/cakes/new" class="btn-success add-cake-btn">+ Add Cake</a>
  </div>

  <table class="admin-table cakes-table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% cakes.forEach(cake => { %>
        <tr>
          <td>
            <img src="<%= cake.imageUrl %>" style="width:70px; height:55px; object-fit:cover; border-radius:6px;">
          </td>

          <td><%= cake.title %></td>

          <td><%= cake.price.toLocaleString() %>Ä‘</td>

          <td><%= cake.category %></td>

          <td>
            <a href="/admin/cakes/<%= cake.id %>/edit" class="btn-primary">Edit</a>

            <form action="/admin/cakes/<%= cake.id %>/delete" method="POST" style="display:inline;">
              <button class="btn-danger" onclick="return confirm('Delete this cake?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>